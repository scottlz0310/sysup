# sysup Windows用設定ファイル
# %USERPROFILE%\.config\sysup\sysup.toml にコピーして使用してください

[updaters]
# Windows専用パッケージマネージャ
scoop = true

# クロスプラットフォーム対応
npm = true
pipx = true
uv = true
rustup = true
cargo = true
gem = true

# Linux専用（Windows環境では自動的にスキップ）
apt = true
snap = true
flatpak = true
firmware = true

# macOS/Linux（Windows環境では未検出ならスキップ）
brew = true
nvm = true

[auto_run]
# 自動実行設定（Windows環境では未対応）
mode = "disabled"

[logging]
# ログ設定
dir = "~\\AppData\\Local\\sysup"
retention_days = 30
level = "INFO"

[backup]
# バックアップ設定
dir = "~\\AppData\\Local\\sysup\\backups"
enabled = true

[notification]
# デスクトップ通知設定（Windows環境では未対応）
enabled = false
on_success = false
on_error = false
on_warning = false

[general]
# その他の設定
parallel_updates = true
dry_run = false
cache_dir = "~\\AppData\\Local\\sysup\\cache"
